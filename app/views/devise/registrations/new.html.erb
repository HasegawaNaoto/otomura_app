<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="new-account-container">
  <h2 class="new-acount-header">新規登録</h2>

  <div class="new-acount-form-container">
    <div class="new-acount-field-container">
      <%= f.label :name,"名前を入力" %> <em>(最大20文字まで)</em><br />
      <%= f.text_field :name,class:"frame", autofocus: true, maxlength: "20" %>
    </div>

    <div class="new-acount-field-container">
      <%= f.label :email,"メールアドレスを入力" %><br />
      <%= f.email_field :email,class:"frame", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="new-acount-field-container">
      <%= f.label :password,"パスワードを入力" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password,class:"frame", autocomplete: "new-password" %>
    </div>

    <div class="new-acount-field-container">
      <%= f.label :password_confirmation,"確認のため、パスワードを再入力" %><br />
      <%= f.password_field :password_confirmation,class:"frame", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録",class:"update_btn btn" %>
    </div>
  </div>
  <% end %>

  <div class="new-account-btn-container">
    <%= render "devise/shared/links" %>
  </div>
</div>

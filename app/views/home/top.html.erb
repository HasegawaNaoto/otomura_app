<div class="login-form-container">
  <h2>HoldHands.comへようこそ</h2>
  <p>HoldHands.comは頑張ったことを共有する<br>もう1つのSNSサイトです。</p>
  <div class="login-left-container">
    <h1>HoldHands</h1>
    <div class="login-left-radius">
      <div class="login-btn-container">
        <%= render "devise/shared/links" %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-form-body">

        <%= f.email_field :email,type:"email",class:"login_email_form",placeholder:"メールアドレスを入力",autofocus: true, autocomplete: "email" %>

        <%= f.password_field :password,type:"password",class:"login_password_form",placeholder:"パスワードを入力", autocomplete: "current-password" %>

        <% if devise_mapping.rememberable? %>
        <div class="login-id-hold-btn">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"ログインIDを保存する" %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン",class: 'login-form-btn' %>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードを忘れたら", new_password_path(resource_name),class:'login-password-forget' %><br />
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
